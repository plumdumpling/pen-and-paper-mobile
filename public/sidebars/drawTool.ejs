<div id="drawTool">
  <div id="tools" class="top">
    <h3>Pinselart</h3>
    <button name="tool" value="draw" onClick="toggleTool(this);" disabled>Malen</button>
    <button name="tool" value="shade" onClick="toggleTool(this);">Schattieren</button>
    <button name="tool" value="erase" onClick="toggleTool(this);">Radieren</button>
    <br class="clear"/>

    <h3>Pinselgröße</h3>
    <input id="lineWidth" type="range" value="10" min="2" max="22" step="4" />
  </div>
  <!-- dotted line -->
  <svg width="100%" height="6px" class="dottedLine">
    <line x1="0" x2="2000" y1="2" y2="2" stroke="#33373f" stroke-width="3" stroke-linecap="round" stroke-dasharray="6, 8"/>
  </svg>
  <div class="bottom" data-scrollbar="light">
    <% for(var n=0; n<colors.length; n++){ %>
    <div class="colorPalette">
      <% for(var m=0; m<colors[n].length; m++){ %>
      <button class="colorBtn" style="border-color:<%= colors[n][m] %>;"></button>
      <% } %>
    </div>
    <% } %>
  </div>
</div>

<script type="text/javascript">
document.getElementById('lineWidth').onchange = function (){
  this.setAttribute('value', this.value);
};
</script>
